<% if @user.errors.any? %>
<h2>The following errors prevented the creation of the article</h2>
    <ul>
        <% @user.errors.full_messages.each do |msg| %>
        
            <li><%=msg%></li>
        
        <%end%>
    </ul>

<%end%>

<div class="row">
 <div class="col-xs-12">
    <%= form_for(@user, :html=>{class:"form-horizontal", role:"form"}) do |f|%>
     <div class="form-group">
      <label class="col-sm-2 control-label">Username</label>
       <div class="col-sm-8">
        <%= f.text_field :username, class:"form-control",placeholder:"Enter username",autofocus:true %>
       </div> 
      </div>
    <div class="form-group">
      <label class="control-label col-sm-2">Email</label>
        <div class="col-sm-8">
            <%= f.email_field :email, rows:10, class:"form-control", placeholder:"Enter Email", autofocus:true %>
        </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2">Password</label>
        <div class="col-sm-8">
            <%= f.password_field :password, rows:10, class:"form-control", placeholder:"Enter a password", autofocus:true %>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">      
            <%=f.submit(@user.new_record? ? "Sign Up" : "Update your account", class:"btn btn-primary btn-lg")%>
        </div>
    </div>
    </div>
 </div>  
    <% end %>

<div class="col-xs-4 col-xs-offset-4">
    <%= link_to 'Cancel request and return to articles listing',articles_path%>
</div>  