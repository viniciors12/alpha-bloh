<h1 align="center"> Alpha Bloggers! </h1>
<div align="center">
    <%= will_paginate %>
</div>
<% @users.each do |user|%>
  <div class="listing">
     <div class="row">
       <div class="well col-md-4 col-md-offset-4">
           
          <%= image_tag user.gravatar_url,size:80, class:"img-circle" %>
           
          <div class="article-title">
           <%=link_to user.username, user_path(user)%>
          </div>
           <small><%= pluralize(user.articles.count,"article") if user.articles%></small>
           
     </div>
 </div>
</div>
<%end%>
<div align="center">
    <%= will_paginate %>
</div>