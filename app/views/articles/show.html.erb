
<h2 align="center">Title: <%= @article.title%></h2>
<div "well col-cx-8 col-xs-offset-2">
    <hr>
    <h4><strong>Description:</strong></h4>
    <%= simple_format(@article.description)%>
    <hr>
    <h4><strong>Owner:</strong></h4>
    <%= simple_format(@article.user.username) if @article.user%>
    <small> 
           Created: <%= time_ago_in_words(@article.created_at) %> ago &nbsp; &nbsp;
           Last update: <%= time_ago_in_words(@article.updated_at)%> ago
    </small>
    <div class="article-actions">
        <%= link_to 'Edit this article',edit_article_path(@article), class:"btn btn-xs btn-primary"%>
        <%= link_to 'View all articles',articles_path, class:"btn btn-xs btn-success"%>   
        <%= link_to 'Delete this article',articles_path(@article),method: :delete,
        data:{confirm: "Are you sure you want to delete this article? "}, class:"btn btn-xs btn-danger"%>   
    </div>
    </div>
</div>

